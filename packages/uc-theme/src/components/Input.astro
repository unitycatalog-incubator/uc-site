---
import clsx from "clsx";

interface Props {
  type: "email" | "number" | "text";
  name: string;
  value?: string;
  placeholder?: string | undefined;
  isFullWidth?: boolean | undefined;
  id?: string | undefined;
  className?: string | undefined;
}

const { type, name, value, placeholder, isFullWidth, id, className } =
  Astro.props;
---

<input
  type={type}
  name={name}
  value={value}
  placeholder={placeholder}
  id={id}
  class={clsx(
    "appearance-none text-neutral-950 border-1 border-neutral-300 bg-white rounded-md min-h-[50px] text-lg py-3 px-7 font-medium",
    { "flex w-full": isFullWidth, "inline-flex": !isFullWidth },
    className,
  )}
/>
