---
import type { ButtonType } from "../types";
import Button from "./Button.astro";

interface Props {
  title: string;
  body: string;
  buttons: ButtonType[];
}
const { title, body, buttons } = Astro.props;
---

<section class="cta-section">
  <h2 class="cta-title">{title}</h2>
  <p class="cta-body">{body}</p>
  <div class="cta-buttons">
    {
      buttons.map((btn, i) => (
        <Button
          label={btn.label}
          url={btn.url}
          style={i === 0 ? "github" : "slack"}
          size="2"
        />
      ))
    }
  </div>
  <img
    src="/images/cta-section_underlay.svg"
    alt=""
    class="cta-underlay"
    aria-hidden="true"
  />
  <style>
    .cta-section {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      padding: 4rem 1rem 6rem 1rem;
      background: none;
      position: relative;
      overflow: hidden;
    }
    .cta-underlay {
      position: absolute;
      left: 0;
      bottom: 0;
      width: 100%;
      max-width: 100vw;
      pointer-events: none;
      z-index: 0;
      user-select: none;
    }
    .cta-title {
      font-size: 2.5rem;
      font-weight: 700;
      color: var(--color-neutral-0);
      margin-bottom: 1.5rem;
      text-align: center;
      z-index: 1;
    }
    .cta-body {
      color: var(--color-neutral-1000);
      font-size: 1.35rem;
      text-align: center;
      max-width: 700px;
      margin-bottom: 2.5rem;
      line-height: 1.5;
      z-index: 1;
    }
    .cta-buttons {
      display: flex;
      gap: 1.5rem;
      justify-content: center;
      flex-wrap: wrap;
      display: flex;
      gap: 1rem;
      justify-content: center;
      align-items: center;
      width: 100%;
      max-width: 600px;
      z-index: 1;
    }
    .cta-btn {
      display: inline-block;
      font-size: 1.25rem;
      font-weight: 500;
      padding: 1rem 2.5rem;
      border-radius: 0.75rem;
      text-decoration: none;
      transition:
        box-shadow 0.2s,
        background 0.2s,
        color 0.2s;
      box-shadow: 0 2px 16px 0 #0002;
      border: none;
      outline: none;
      text-align: center;
    }
    .cta-btn-white {
      background: var(--color-neutral-0);
      color: var(--color-neutral-900);
    }
    .cta-btn-yellow {
      background: var(--color-secondary-500);
      color: var(--color-neutral-900);
    }
    .cta-btn:hover {
      box-shadow: 0 4px 24px 0 #0003;
      filter: brightness(0.97);
    }
    @media (max-width: 600px) {
      .cta-title {
        font-size: 2rem;
      }
      .cta-body {
        font-size: 1rem;
      }
      .cta-btn {
        font-size: 1rem;
        padding: 0.75rem 1.5rem;
      }
    }
  </style>
</section>
