---
import clsx from "clsx";

interface Props {
  type?: "button" | "submit" | undefined;
  label?: string | undefined;
  url?: string | undefined;
  variant?: "primary" | "secondary" | "tertiary" | undefined;
  fullWidth?: boolean | undefined;
  className?: string | undefined;
}

const {
  type,
  label,
  url,
  variant = "primary",
  fullWidth,
  className,
} = Astro.props;

const classes = clsx(
  "appearance-none min-h-[50px] text-lg py-3 px-7 font-medium justify-center items-center rounded-md text-neutral-950 cursor-pointer transition-colors",
  {
    "flex w-full": fullWidth,
    "inline-flex": !fullWidth,
    "bg-box-shadow-yellow hover:bg-secondary-700": variant === "primary",
    "bg-neutral-50 hover:bg-neutral-200": variant === "secondary",
    "text-white bg-primary-1000 hover:bg-primary-700": variant === "tertiary",
  },
  className,
);
---

{
  url ? (
    <a href={url} class={classes}>
      <slot>{label}</slot>
    </a>
  ) : (
    <button type={type} class={classes}>
      <slot>{label}</slot>
    </button>
  )
}
