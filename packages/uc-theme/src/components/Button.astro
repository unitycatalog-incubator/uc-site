---
interface Props {
  label?: string;
  url: string;
  style?: string; // e.g., 'github', 'slack', 'linkedin'
  fullWidth?: boolean;
  size?: "1" | "2" | "many";
}
const { label, url, style = "", fullWidth = false, size = "2" } = Astro.props;
---

<a
  href={url}
  class={`btn ${style} ${fullWidth ? "full-width" : ""} size-${size}`}
>
  <slot>{label}</slot>
</a>

<style>
  .btn {
    font-size: 1.125rem;
    line-height: 1.5;
    border-radius: 0.5rem;
    padding: 0.75rem 2rem;
    font-weight: 500;
    text-align: center;
    display: flex;
    align-items: center;
    grid-column-gap: 0.75rem;
    grid-row-gap: 0.75rem;
  }

  .btn.size-2 {
    display: flex;
    padding: 1rem 1.5rem;
    align-items: center;
    justify-content: center;
    grid-column-gap: 1rem;
    height: 100%;
    min-width: fit-content;
    flex-shrink: 0;
    grid-row-gap: 1rem;
    flex-grow: 1;
    flex-wrap: wrap;
  }

  .btn.github {
    background: var(--color-neutral-0);
    color: var(--color-neutral-950);
  }

  .btn.slack {
    background: var(--color-box-shadow-yellow);
    color: var(--color-neutral-950);
  }

  .btn.linkedin {
    background: var(--color-primary-1000);
    color: var(--color-neutral-0);
  }

  .btn.github:hover {
    background: var(--color-neutral-200);
  }

  .btn.slack:hover {
    background: var(--color-secondary-700);
  }

  .btn.linkedin:hover {
    background: var(--color-primary-700);
  }

  .btn.full-width {
    width: 100%;
  }

  @media (max-width: 1024px) {
    .btn.size-2 {
      width: 100% !important;
      min-width: 0 !important;
      flex-grow: 0 !important;
      flex-shrink: 1 !important;
    }
  }
</style>
