---
import clsx from "clsx";

interface Props {
  label?: string;
  url: string;
  style?: "github" | "slack" | "linkedin" | undefined;
  fullWidth?: boolean;
  size?: "1" | "2" | "many";
  className?: string | undefined;
}
const {
  label,
  url,
  style,
  fullWidth = false,
  size = "2",
  className,
} = Astro.props;
---

<a
  href={url}
  class={clsx(
    "btn",
    `size-${size}`,
    { ["full-width"]: !!fullWidth },
    style,
    className,
  )}
>
  <slot>{label}</slot>
</a>

<style>
  .btn {
    font-size: 1.125rem;
    line-height: 1.5;
    border-radius: 0.5rem;
    padding: 0.75rem 1.75rem;
    font-weight: 400;
    text-align: center;
    display: flex-inline;
    justify-content: center;
    align-items: center;
    grid-column-gap: 0.75rem;
    grid-row-gap: 0.75rem;
  }

  .btn.size-2 {
    display: flex;
    padding: 0.75rem 1.75rem;
    align-items: center;
    justify-content: center;
    grid-column-gap: 1rem;
    height: 100%;
    min-width: fit-content;
    flex-shrink: 0;
    grid-row-gap: 1rem;
    flex-grow: 1;
    flex-wrap: wrap;
  }

  .btn.github {
    background: var(--color-neutral-0);
    color: var(--color-neutral-950);
  }

  .btn.slack {
    background: var(--color-box-shadow-yellow);
    color: var(--color-neutral-950);
  }

  .btn.linkedin {
    background: var(--color-primary-1000);
    color: var(--color-neutral-0);
  }

  .btn.github:hover {
    background: var(--color-neutral-200);
  }

  .btn.slack:hover {
    background: var(--color-secondary-700);
  }

  .btn.linkedin:hover {
    background: var(--color-primary-700);
  }

  .btn.full-width {
    display: flex;
    width: 100%;
  }

  @media (max-width: 1024px) {
    .btn.size-2 {
      width: 100% !important;
      min-width: 0 !important;
      flex-grow: 0 !important;
      flex-shrink: 1 !important;
    }
  }
</style>
