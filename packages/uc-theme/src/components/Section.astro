---
import clsx from "clsx";
import Container from "./Container.astro";

interface Props {
  /* Content */
  children: unknown;
  /* Padding */
  padding?: "xl" | "lg" | "md" | "sm" | "none" | undefined;
  /* HTML ID */
  id?: string | undefined;
  /* Class name */
  className?: string | undefined;
  /* Container HTML ID */
  idContainer?: string | undefined;
  /* Container class name */
  classNameContainer?: string | undefined;
}

const {
  padding = "md",
  id,
  className,
  idContainer,
  classNameContainer,
} = Astro.props;
---

<section
  id={id}
  class={clsx(
    {
      "py-8": padding === "sm",
      "py-8 sm:py-16": padding === "md",
      "py-8 sm:py-24": padding === "lg",
      "py-8 sm:py-40": padding === "xl",
    },
    className,
  )}
>
  <Container id={idContainer} className={classNameContainer}>
    <slot />
  </Container>
</section>
