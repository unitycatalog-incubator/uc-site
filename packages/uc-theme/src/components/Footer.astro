---
import type { Logo, Link, Copyright } from "../types";
interface Props {
  logos: Logo[];
  links: Link[];
  copyright: Copyright;
}
const { logos, links, copyright } = Astro.props;
---

<footer class="footer">
  <div class="footer-logos">
    {
      logos.map((logo) => (
        <img src={logo.src} alt={logo.alt} class="footer-logo" />
      ))
    }
  </div>
  <nav class="footer-nav">
    {
      links.map((link) => (
        <a href={link.url} class="footer-link">
          {link.label}
        </a>
      ))
    }
  </nav>
  <div class="footer-divider"></div>
  <div class="footer-copyright">{copyright.text}</div>
  <style>
    .footer {
      background: var(--color-neutral-950);
      color: var(--color-neutral-0);
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 3rem 1rem 1.5rem 1rem;
      width: 100%;
      font-family: var(--font-sans);
      padding-top: 7rem;
      padding-bottom: 7rem;
      line-height: 1.5;
      padding-left: 5%;
      padding-right: 5%;
    }
    .footer-logos {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 3rem;
      margin-bottom: 2.5rem;
    }
    .footer-logo {
      height: 56px;
      max-width: 220px;
      object-fit: contain;
      background: none;
    }
    .footer-nav {
      display: flex;
      gap: 2.5rem;
      justify-content: center;
      margin-bottom: 2.5rem;
    }
    .footer-link {
      color: var(--color-neutral-1000);
      font-size: 1rem;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s;
      padding-bottom: 2rem;
    }
    .footer-link:hover {
      color: var(--color-neutral-0);
    }
    .footer-divider {
      width: 100%;
      max-width: 98vw;
      border-bottom: 1px solid var(--color-neutral-100);
      margin-bottom: 2rem;
    }
    .footer-copyright {
      color: var(--color-neutral-1000);
      font-size: 0.875rem;
      text-align: center;
    }
    @media (max-width: 700px) {
      .footer-logos {
        flex-direction: column;
        gap: 1.5rem;
      }
      .footer-nav {
        flex-direction: column;
        gap: 1.25rem;
      }
    }
  </style>
</footer>
