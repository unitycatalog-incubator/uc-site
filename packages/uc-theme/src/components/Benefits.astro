---
import type { Benefit } from "../types";
import Card from "./Card.astro";
const { benefits } = Astro.props;
---

<section class="benefits-section">
  <div class="benefits-cards">
    {
      benefits.map((benefit: Benefit) => (
        <Card
          type="benefit"
          title={benefit.title}
          body={benefit.body}
          icon={benefit.icon || undefined}
        />
      ))
    }
  </div>
  <style>
    .benefits-section {
      width: 100%;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 10rem 5rem;
      background: var(--color-neutral-950);
      height: 100%;
    }
    .benefits-cards {
      display: flex;
      flex-direction: row;
      gap: 2rem;
      max-width: 1260px;
      height: 250px;
      justify-content: center;
    }
    .benefits-cards > * {
      flex: 1;
      min-width: 0;
    }
    @media (max-width: 1200px) {
      .benefits-cards {
        flex-direction: column;
        gap: 2rem;
        align-items: center;
        padding: 0 2rem;
      }
    }
  </style>
</section>
