---
import { Image } from "astro:assets";
const {
  title,
  excerpt,
  date,
  url = "#",
  thumbnail,
  badge = "GUIDE",
} = Astro.props;
---

<div class="featured-hero">
  <div class="featured-hero-background">
    <div class="featured-hero-grid-bg"></div>
    <div class="featured-hero-bottom-gradient"></div>
    <div class="featured-hero-grain-bg"></div>
  </div>
  <a href={url || "#"} class="featured-hero-card">
    <div class="featured-hero-content">
      <span class="featured-hero-badge">{badge}</span>
      <h2>{title}</h2>
      <p class="featured-hero-desc">{excerpt}</p>
      <span class="featured-hero-date">{date}</span>
    </div>
    <div class="featured-hero-image">
      {
        thumbnail && (
          <Image
            src={thumbnail}
            alt={title}
            width={2133}
            height={1200}
            loading="eager"
          />
        )
      }
    </div>
  </a>
</div>

<style>
  .featured-hero {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 3rem 0 13rem 0;
    min-height: 400px;
    width: 100%;
    padding-right: 5%;
    padding-left: 5%;
    overflow: hidden;
  }
  .featured-hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
  }
  .featured-hero-grid-bg {
    z-index: 1;
    background-image: url(/images/hero_background_with_grid.svg);
    background-position: 50% 100%;
    background-repeat: no-repeat;
    background-size: cover;
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 8rem;
    opacity: 0.3;
  }
  .featured-hero-bottom-gradient {
    z-index: 2;
    background: url(/images/featured_blog_gradient.svg);
    background-repeat: no-repeat;
    background-size: cover;
    height: 78rem;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 8rem;
    width: 100%;
    opacity: 1;
  }
  .featured-hero-card {
    z-index: 1;
    display: flex;
    width: 100%;
    max-width: 1440px;
    min-height: 340px;
    border-radius: 1rem;
    overflow: hidden;
    background: var(--color-accent-1000);
    margin-left: auto;
    margin-right: auto;
    transition: transform 0.2s ease-in-out;
    max-width: 1280px;
  }
  .featured-hero-card:hover {
    transform: scale(0.98);
  }
  .featured-hero-content {
    flex: 1 1 50%;
    grid-column-gap: 2rem;
    grid-row-gap: 2rem;
    flex-flow: column;
    justify-content: center;
    align-items: flex-start;
    padding: 2.5rem 2rem;
    display: flex;
    max-height: 445px;
  }
  .featured-hero-badge {
    background: var(--color-accent-1100);
    color: var(--color-neutral-0);
    text-transform: uppercase;
    border-radius: 5px;
    padding: 0.625rem;
    font-size: 0.75rem;
    line-height: 1;
  }
  .featured-hero-content h2 {
    font-size: 1.8rem;
    font-weight: 800;
    line-height: 1.3;
  }
  .featured-hero-desc {
    color: var(--color-neutral-1000);
    font-size: 1.15rem;
    line-height: 1.5;
    max-width: 90%;
    opacity: 0.9;
  }
  .featured-hero-date {
    color: var(--color-neutral-1000);
    font-size: 1rem;
    margin-top: auto;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  .featured-hero-image {
    flex: 1 1 70%;
    display: flex;
    align-items: center;
    justify-content: center;
    max-width: 650px;
    min-height: 400px;
    max-height: 445px;
    border-top-right-radius: 1.5rem;
    border-bottom-right-radius: 1.5rem;
  }
  .featured-hero-image img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    border-top-left-radius: 1rem;
    border-bottom-left-radius: 1rem;
  }
  @media (max-width: 1200px) {
    .featured-hero-card {
      flex-direction: column-reverse;
      min-height: unset;
    }
    .featured-hero-content h2 {
      font-size: 1.5rem;
    }
    .featured-hero-image {
      min-width: unset;
      min-height: 180px;
      padding-top: 0rem;
      padding-bottom: 1rem;
      width: 100%;
      max-width: 100%;
    }
    .featured-hero-image img {
      border-top-right-radius: 1rem;
      border-bottom-right-radius: 1rem;
      width: 100%;
      height: 100%;
      object-fit: cover;
    }

    @media (max-width: 600px) {
      .featured-hero-image {
        padding-top: 0rem;
        height: 100%;
        width: 100%;
        max-width: 100%;
      }
      .featured-hero-content {
        padding: 1.5rem 1rem;
        height: fit-content;
        max-height: none;
      }
      .featured-hero-content h2 {
        font-size: 1.5rem;
        line-height: 1.2;
      }
      .featured-hero-desc {
        font-size: 1rem;
        line-height: 1.4;
        max-width: 100%;
      }
      .featured-hero-date {
        font-size: 0.875rem;
        margin-top: 1rem;
      }
    }
  }
</style>
