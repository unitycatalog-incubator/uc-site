---
import Image from "astro/components/Image.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<header class="hero-blog-post">
  <Image
    src="/images/cta-section_underlay.svg"
    alt=""
    class="cta-underlay"
    aria-hidden="true"
    width={100}
    height={100}
    loading="lazy"
  />
  <div class="hero-blog-content">
    <h1 class="hero-blog-title">{title}</h1>
  </div>
</header>
<style>
  .hero-blog-post {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding-top: 6rem;
    padding-bottom: 6rem;
    background: var(--color-neutral-950);
    text-align: center;
  }

  .hero-blog-content {
    font-size: 1.25rem;
    line-height: 1.5;
    width: 100%;
    position: relative;
    z-index: 2;
    max-width: 768px;
    margin: 0 auto;
  }

  .hero-blog-title {
    font-size: 2.25rem;
    font-weight: 600;
    color: var(--color-neutral-0);
    margin: 0;
    line-height: 1.3;
  }

  .cta-underlay {
    position: absolute;
    left: 0;
    bottom: 800px;
    width: 100%;
    max-width: 100vw;
    pointer-events: none;
    z-index: 0;
    user-select: none;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .hero-blog-title {
      font-size: 2.5rem;
    }
  }

  @media (max-width: 480px) {
    .hero-blog-title {
      font-size: 2rem;
    }
  }
</style>
