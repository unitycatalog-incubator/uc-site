---
/**
 * Container
 *
 * Creates a centered container for your content. This container is responsive
 * and will adjust depending on the screen size.
 */

import clsx from "clsx";

interface Props {
  /* Content */
  children: unknown;
  id?: string | undefined;
  className?: string | undefined;
}

const { id, className } = Astro.props;
---

<div
  id={id}
  class={clsx(
    "mx-auto px-4 sm:w-[var(--breakpoint-sm)] md:w-[var(--breakpoint-md)] lg:w-[var(--breakpoint-lg)] xl:w-[var(--breakpoint-xl)]",
    className,
  )}
>
  <slot />
</div>
