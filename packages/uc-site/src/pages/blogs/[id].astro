---
import { getCollection, render } from "astro:content";
import BlogPost from "../../components/pages/blog/BlogPost.astro";
import Layout from "../../layouts/Layout.astro";

export async function getStaticPaths() {
  const posts = await getCollection("blog");

  return posts.map((post) => {
    const relatedPosts = posts.filter((p) => p.id !== post.id).slice(0, 3);

    return {
      params: { id: post.id },
      props: { post, relatedPosts },
    };
  });
}

const { post, relatedPosts } = Astro.props;
const { Content } = await render(post);

const raw = typeof post.body === "string" ? post.body : "";
---

<Layout title={post.data.title} description={post.data.description}>
  <BlogPost post={post} relatedPosts={relatedPosts}>
    <!-- Hidden searchable content for better indexing -->
    <div style="display: none;" data-pagefind-body>
      {post.data.title}
      {post.data.description}
      {raw}
    </div>
    <Content />
  </BlogPost>
</Layout>
