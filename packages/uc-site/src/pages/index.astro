---
import Hero from "../components/pages/home/Hero.astro";
import Benefits from "../components/pages/home/Benefits.astro";
import FeatureDetails from "../components/pages/home/FeatureDetails.astro";
import PartnerEcosystem from "../components/pages/home/PartnerEcosystem.astro";
import Endorsements from "../components/pages/home/Endorsements.astro";
import Cta from "../components/pages/home/Cta.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout
  description="Unity Catalog transforms how you manage and govern data, ensuring compatibility and control across diverse platforms and tools."
>
  <Hero />
  <Benefits />
  <FeatureDetails />
  <PartnerEcosystem />
  <Endorsements />
  <Cta />
</Layout>
<style is:global>
  .animation-fadeUp {
    opacity: 0;
    transform: translateY(80px);
    transition:
      opacity 0.3s cubic-bezier(0.4, 0, 0.2, 1),
      transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .animation-fadeUp.visible {
    opacity: 1;
    transform: none;
  }
</style>
<script is:inline>
  window.addEventListener("DOMContentLoaded", function () {
    const featureTexts = document.querySelectorAll(".animation-fadeUp");
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          if (entry.isIntersecting) {
            entry.target.classList.add("visible");
            observer.unobserve(entry.target);
          }
        });
      },
      { threshold: 0.2 },
    );
    featureTexts.forEach((el) => observer.observe(el));
  });
</script>
