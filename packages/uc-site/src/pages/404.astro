---
import { PageLayout, Button, Footer } from "uc-theme/components";
import { getCollection } from "astro:content";

const homeEntries = await getCollection("home");
const footerData = homeEntries.find((entry) => entry.data.type === "footer");
const homeData = {
  footer: {
    logos: footerData?.data.logos || [],
    links: footerData?.data.links || [],
    copyright: footerData?.data.copyright || { text: "" },
  },
};
---

<PageLayout title="Not Found">
  <div class="star-bg"></div>
  <div class="not-found">
    <h1>404</h1>
    <h2>Missing Data Link!</h2>
    <p>
      Oops! It looks like this link led to uncharted territory. But don't worry,
      the Unity Catalog is all about finding connections. Let's navigate back
      and discover the right data paths together.
    </p>
    <Button url="/" size="1" style="slack" label="Go Home" />
  </div>
  <Footer
    logos={homeData.footer.logos}
    links={homeData.footer.links}
    copyright={homeData.footer.copyright}
  />
</PageLayout>

<style>
  .star-bg {
    z-index: 0;
    opacity: 0.08;
    mix-blend-mode: normal;
    background-image: url("/images/hero-star-background.png");
    background-position: 100% 100%;
    background-repeat: repeat;
    background-size: auto;
    position: fixed;
    inset: 0;
    pointer-events: none;
    width: 100vw;
    height: 100vh;
  }
  .not-found {
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    border-radius: 1rem;
    margin: 2rem auto;
    max-width: 700px;
    padding: 2rem 1rem 3rem 1rem;
    position: relative;
    z-index: 1;
  }
  .not-found h1 {
    font-size: 5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }
  .not-found h2 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-bottom: 1.5rem;
  }
  .not-found p {
    font-size: 1.3rem;
    margin-bottom: 2.5rem;
    max-width: 600px;
  }
</style>
