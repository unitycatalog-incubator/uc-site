---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  contributors: CollectionEntry<"profiles">[];
}

const { contributors } = Astro.props;
---

<div>
  <h3 class="mb-4 font-semibold">Contributors</h3>
  <ul class="flex list-none flex-col gap-4">
    {
      contributors.map((contributor) => (
        <li class="flex items-center gap-4">
          {contributor.data.image && (
            <Image
              src={contributor.data.image}
              alt={`Photo of ${contributor.data.name}`}
              class="overflow-hidden rounded-full"
              densities={[1, 2]}
              width="48"
              height="48"
            />
          )}
          <div>
            <div class="font-semibold">{contributor.data.name}</div>
            {contributor.data.title && (
              <div class="text-sm">{contributor.data.title}</div>
            )}
          </div>
        </li>
      ))
    }
  </ul>
</div>
