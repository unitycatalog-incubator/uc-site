---
import type { CollectionEntry } from "astro:content";

interface Props {
  contributors: CollectionEntry<"profiles">[];
}

const { contributors } = Astro.props;
---

<div class="contributors">
  <h3>Contributors</h3>
  <ul>
    {
      contributors.map((contributor) => (
        <li class="contributor-item">
          {contributor.data.image && (
            <img
              src={contributor.data.image}
              alt={contributor.data.name}
              class="contributor-photo"
              width="40"
              height="40"
            />
          )}
          <div>
            <div class="contributor-name">{contributor.data.name}</div>
            <div class="contributor-title">{contributor.data.title}</div>
          </div>
        </li>
      ))
    }
  </ul>
</div>

<style>
  .contributors {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    gap: 1rem;
    width: 100%;
  }
  .contributors h3 {
    font-size: 1rem;
    line-height: 1.5;
    font-weight: 600;
    color: var(--color-accent-1000);
  }
  .contributors ul {
    list-style: disc;
    display: flex;
    flex-direction: column;
  }
  .contributor-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }
  .contributor-photo {
    object-fit: cover;
    border-radius: 100%;
    width: 4rem;
    min-width: 4rem;
    height: 4rem;
    min-height: 3rem;
  }
  .contributor-name {
    font-size: 1rem;
    line-height: 1.5;
    color: var(--color-black-222);
  }
  .contributor-title {
    font-size: 0.875rem;
    line-height: 1.5;
    color: var(--color-neutral-950);
  }
</style>
