---
import { Image } from "astro:assets";
import { config } from "virtual:uc-theme/config";
---

<footer class="footer">
  <div class="footer-logos">
    <Image
      src="/uc-logo.svg"
      alt="Unity Catalog"
      class="footer-logo"
      width={220}
      height={56}
      loading="lazy"
    />
    <div class="footer-logo-divider"></div>
    <Image
      src="/logos/lfaidata-project-badge-sandbox-white.svg"
      alt="LF AI & Data Sandbox Project"
      class="footer-logo"
      width={220}
      height={56}
      loading="lazy"
    />
  </div>
  <nav class="footer-nav">
    {
      config.menus.footer.map((item) => (
        <a href={item.href} class="footer-link">
          {item.label}
        </a>
      ))
    }
  </nav>
  <div class="footer-divider"></div>
  <div class="footer-copyright">
    Â© 2025 Unity Catalog. All rights reserved.
  </div>
</footer>
<style>
  .footer {
    background: var(--color-black);
    color: var(--color-neutral-0);
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 1rem 1.5rem 1rem;
    width: 100%;
    font-family: var(--font-sans);
    padding-top: 7rem;
    padding-bottom: 7rem;
    line-height: 1.5;
    padding-left: 5%;
    padding-right: 5%;
  }
  .footer-logos {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2.5rem;
  }
  .footer-logo {
    height: 56px;
    max-width: 220px;
    object-fit: contain;
    background: none;
  }
  .footer-logo-divider {
    width: 2px;
    height: 56px;
    background: var(--color-neutral-0);
    margin: 0 2rem;
  }
  .footer-nav {
    display: flex;
    gap: 3rem;
    justify-content: center;
    margin-bottom: 2.5rem;
  }
  .footer-link {
    color: var(--color-neutral-1000);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    transition: color 0.2s;
    padding-bottom: 2rem;
  }
  .footer-link:hover {
    color: var(--color-neutral-0);
  }
  .footer-divider {
    width: 100%;
    max-width: 98vw;
    border-bottom: 1px solid var(--color-neutral-0);
    margin-bottom: 2rem;
    max-width: 1250px;
  }
  .footer-copyright {
    color: var(--color-neutral-1000);
    font-size: 0.875rem;
    text-align: center;
  }
  @media (max-width: 700px) {
    .footer {
      padding-top: 2rem;
      padding-bottom: 2rem;
    }
    .footer-logos {
      flex-direction: column;
      gap: 1.5rem;
    }
    .footer-logo-divider {
      display: none;
    }
    .footer-nav {
      flex-direction: column;
      gap: 1.25rem;
    }
  }
  @media (max-width: 768px) {
    .footer-nav {
      display: grid !important;
      grid-template-columns: 1fr 1fr;
      gap: 1.5rem 2rem;
      text-align: center;
      flex-direction: unset;
    }
    .footer-nav a:nth-child(1) {
      order: 1;
    }
    .footer-nav a:nth-child(2) {
      order: 3;
    }
    .footer-nav a:nth-child(3) {
      order: 2;
    }
    .footer-nav a:nth-child(4) {
      order: 4;
    }
  }
</style>
