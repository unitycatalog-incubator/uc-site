---
interface Props {
  type: "email" | "number" | "text";
  name: string;
  value?: string;
  placeholder?: string | undefined;
  isFullWidth?: boolean | undefined;
  id?: string | undefined;
  className?: string | undefined;
}

const { type, name, value, placeholder, isFullWidth, id, className } =
  Astro.props;
---

<input
  type={type}
  name={name}
  value={value}
  placeholder={placeholder}
  id={id}
  class:list={[
    "min-h-[50px] appearance-none rounded-md border-1 border-neutral-300 bg-white px-7 py-3 text-lg font-medium text-neutral-950",
    { "flex w-full": isFullWidth, "inline-flex": !isFullWidth },
    className,
  ]}
/>
